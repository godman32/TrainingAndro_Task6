<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Homepage"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/info_text_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview Expenses"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_item_expense"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/info_text_expenses"
            android:layout_margin="10dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total = "
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/expense_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Total"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/info_text_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview Income"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_item_income"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/info_text_income"
            android:layout_margin="10dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total = "
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/income_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Total"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance = Rp. Balance"
        android:textSize="20dp"
        android:textStyle="bold"/>

</LinearLayout>